<section class="container">
	<form class="form-horizontal" method="post" action="/articles">
		<div class="form-group">
			<label class="control-label col-md-1">Title:</label>
			<div class="col-md-11">
				<input type="text" name="title" class="form-control" />
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-1">Content:</label>
			<div class="col-md-11">
				<textarea id="editor" name="content" class="form-control" rows="20"></textarea>
			</div>
		</div>
		<div class="form-group">
			<input type="submit" class="btn btn-primary pull-right" value="Submit" />
		</div>
	</form>
	<script src="/js/vendor/ckeditor/ckeditor.js"></script>
	<script type="text/javascript">
	CKEDITOR.replace('editor');
	</script>
</section>
